---
interface Props {
	title: string;
}

const { title = "No name" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="h-10 bg-blue-500">
			Preheader
		</div>
		
		<header class="sticky top-0 bg-orange-400 h-20">

		</header>

		<menu class="flex bg-slate-400">
			<li><a href="/" class="hover:bg-white/30 px-4 block" >Inicio</a></li>
			<li><a href="/quienes-somos" class="hover:bg-white/30 px-4 block" >Quienes somos</a></li>
			<li class="h-full relative group">
				<a href="" class="hover:bg-white/30 px-4 block">Organigrama</a>
				<div class="absolute group-hover:block hidden bg-slate-600 w-60">
					<a href="/organigrama" class="hover:bg-slate-800 block py-3 px-4 text-lg text-white">
						Pagina principal
					</a>
					<a href="/organigrama/biografia" class="hover:bg-slate-800 block py-3 px-4 text-lg text-white">
						Biografia
					</a>
				</div>
				<li class="h-full relative group">
					<a href="" class="hover:bg-white/30 px-4 block">Noticias</a>
					<div class="absolute group-hover:block hidden bg-slate-600 w-60">
						<a href="/noticias/clifford" class="hover:bg-slate-800 block py-3 px-4 text-lg text-white">
							clifford
						</a>
						<a href="/noticias/rover" class="hover:bg-slate-800 block py-3 px-4 text-lg text-white">
							rover
						</a>
						<a href="/noticias/spot" class="hover:bg-slate-800 block py-3 px-4 text-lg text-white">
							spot
												
						</a>
					</div>
			</li>
			<li><a href="/contacto" class="hover:bg-white/30 px-4 block" >Contacto</a></li>
		</menu>
		<slot />
	</body>
</html>

<style is:global>
@font-face {
  font-family: 'MyFont';
  src: url('/fonts/DancingScript-VariableFont_wght.ttf');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
</style>